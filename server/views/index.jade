doctype html
html
	head
		meta(charset='uft-8')
		title= title
		link(rel='stylesheet', href='https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css')
		script(src='https://cdn.bootcss.com/jquery/2.1.1/jquery.min.js')
		script(src='https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js')
		script(src='modules/socket.io.min.js')
		script(src='assets/js/login.js')
	body
		nav.navbar.navbar-inverse(role='navigation')
			.container-fluid
				.navbar-header
					a.navbar-brand(style='margin:10px; font-size:40px;') Login Page
				div(style='float:right')
					ul.nav.navbar-nav
						li
							a(href='/signout', style='margin:10px; font-size:20px;') 
								span.glyphicon.glyphicon-log-in Login
						li
							a(href='/signup', style='margin:10px; font-size:20px;') 
								span.glyphicon.glyphicon-user Register

		.container-fluid
			.row
				div(style='height:120px;')
			form(name='login', action='/apis/login', role='form', method='post')
				.row
					.col-sm-3
					.col-sm-6
						div.panel.panel-primary
							div.panel-heading
								h3.panel-title 平台登入
							div.panel-body
								label(for='name' style='font:30px') 使用者名稱
								input.form-control(type='text', name='user', placeholder='Username')
								br
								label(for='name') 密碼
								input.form-control(type='password', name='passwd', placeholder='Password')
								br

								button.btn.btn-primary.btn-lg(style='text-shadow:black 5px 3px 3px;', type='submit')
									span.glyphicon.glyphicon-user 帳密登入

			.row
				.col-sm-3
				.col-sm-6
					button.btn.btn-warning.btn-lg.face_recognition(style='float:right; text-shadow:black 5px 3px 3px;')
						span.glyphicon.glyphicon-user 人臉識別

					#myAlert.alert.alert-success
						a.close(href='#', data-dismiss='alert')
							&times;
						strong 可使用人臉識別驗證登入

	script(type='text/javascript').
		$(function(){
			$("#myAlert").bind('close.bs.alert', function(){
				alert('提示！ 請通過驗證以進入監控平台');
			});
		});
